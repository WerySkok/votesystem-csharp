@{
    ViewData["Title"] = "Главная";
}

<div class="flex flex-col justify-center items-center h-screen">
    @if (ViewBag.CurrentElection != null)
    {
        <h1 class="text-4xl">@ViewBag.CurrentElection.Title</h1>
        <p class="mt-3">До @ViewBag.CurrentElection.EndTime</p>
        <p class="mt-3">Успейте проголосовать!</p>
        <a class="inline-flex gap-x-2 items-center px-4 py-3 mt-3 text-sm font-semibold text-white bg-blue-600 rounded-lg border border-transparent px-auto hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="/vote/@ViewBag.CurrentElection.Id">
            Участвовать
        </a>
    }
    else
    {
        <h1 class="text-4xl">На данный момент голосований нет</h1>
    }
</div>