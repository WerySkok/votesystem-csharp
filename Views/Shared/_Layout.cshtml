@{
    var user = await votesystem_csharp.Models.User.GetUser(Context);
}
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — ДЭГ Нижнемуровска</title>
    <link href="/css/main.min.css" rel="stylesheet" />
    <script src="/js/preline.js"></script>
</head>

<body>
    <div class="grid h-screen mx-auto grid-rows-[auto_1fr_auto]">
        <header class="justify-around items-center px-8 py-2 font-semibold border-b-2 sm:space-x-16 sm:flex">
            <a class="flex justify-center items-center space-x-2" href="/">
                <img class="h-16" src="/imgs/480px-Герб_Нижнемуровска.png" alt="Герб Нижнемуровска" />
                <div class="inline-block text-zinc-900">
                    Система дистанционного электронного голосования города Нижнемуровска
                </div>
            </a>
            @if (user != null)
            {
                <div class="relative inline-flex hs-dropdown [--placement:bottom-right]">
                    <button
                        id="hs-dropdown"
                        type="button"
                        class="inline-flex gap-x-2 justify-center items-center px-3 py-2 rounded hs-dropdown-toggle hover:bg-zinc-100"
                    >
                        @user.DisplayName
                        <svg
                            class="w-2.5 h-2.5 hs-dropdown-open:rotate-180"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M2 5L8.16086 10.6869C8.35239 10.8637 8.64761 10.8637 8.83914 10.6869L15 5"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                            />
                        </svg>
                    </button>

                    <div
                        class="hs-dropdown-menu transition-[opacity,margin] duration min-w-[10rem] hs-dropdown-open:opacity-100 opacity-0 hidden z-10 mt-2 bg-white rounded-xl p-2 border-2"
                        aria-labelledby="hs-dropdown"
                    >
                        @if (user.IsAdmin)
                        {
                            <a class="block px-3 py-2 rounded hover:bg-zinc-100" href="/admin"
                                >Админка</a
                            >
                        }
                        <form method="POST" action="/logout" role="none">
                            <button
                                class="block px-3 py-2 w-full text-left rounded hover:bg-zinc-100"
                                href="/logout"
                            >
                                Выйти
                            </button>
                        </form>
                    </div>
                </div>

            }
            else
            {
                <a class="inline-flex items-center justify-center px-3 py-2 rounded hs-dropdown-toggle gap-x-2 text-white bg-[#5865F2] transition hover:bg-[#4d59d3]"
                   href="/login"><svg class="fill-white" xmlns="http://www.w3.org/2000/svg" height="1em"
                   viewBox="0 0 640 512">
                    <path d="M524.531,69.836a1.5,1.5,0,0,0-.764-.7A485.065,485.065,0,0,0,404.081,32.03a1.816,1.816,0,0,0-1.923.91,337.461,337.461,0,0,0-14.9,30.6,447.848,447.848,0,0,0-134.426,0,309.541,309.541,0,0,0-15.135-30.6,1.89,1.89,0,0,0-1.924-.91A483.689,483.689,0,0,0,116.085,69.137a1.712,1.712,0,0,0-.788.676C39.068,183.651,18.186,294.69,28.43,404.354a2.016,2.016,0,0,0,.765,1.375A487.666,487.666,0,0,0,176.02,479.918a1.9,1.9,0,0,0,2.063-.676A348.2,348.2,0,0,0,208.12,430.4a1.86,1.86,0,0,0-1.019-2.588,321.173,321.173,0,0,1-45.868-21.853,1.885,1.885,0,0,1-.185-3.126c3.082-2.309,6.166-4.711,9.109-7.137a1.819,1.819,0,0,1,1.9-.256c96.229,43.917,200.41,43.917,295.5,0a1.812,1.812,0,0,1,1.924.233c2.944,2.426,6.027,4.851,9.132,7.16a1.884,1.884,0,0,1-.162,3.126,301.407,301.407,0,0,1-45.89,21.83,1.875,1.875,0,0,0-1,2.611,391.055,391.055,0,0,0,30.014,48.815,1.864,1.864,0,0,0,2.063.7A486.048,486.048,0,0,0,610.7,405.729a1.882,1.882,0,0,0,.765-1.352C623.729,277.594,590.933,167.465,524.531,69.836ZM222.491,337.58c-28.972,0-52.844-26.587-52.844-59.239S193.056,219.1,222.491,219.1c29.665,0,53.306,26.82,52.843,59.239C275.334,310.993,251.924,337.58,222.491,337.58Zm195.38,0c-28.971,0-52.843-26.587-52.843-59.239S388.437,219.1,417.871,219.1c29.667,0,53.307,26.82,52.844,59.239C470.715,310.993,447.538,337.58,417.871,337.58Z" />
                </svg> Войти через Discord</a>
            }
        </header>
        <main role="main">
            @RenderBody()
        </main>
        <footer class="px-8 py-4 border-t-2 text-zinc-500">
            написано WerySkok при помощи ASP.NET Core и Tailwind в 2023 году
        </footer>
    </div>
</body>

</html>
